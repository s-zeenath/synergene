// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  clerkUserId String   @unique
  email       String   @unique
  name        String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  predictions Prediction[]
  reports     Report[] // Removed experiments
  experiments  Experiment[]

}

model Drug {
  id         String   @id @default(cuid())
  name       String   @unique
  target     String?
  mechanism  String?
  associates String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  predictionsA Prediction[] @relation("predDrugA")
  predictionsB Prediction[] @relation("predDrugB")
  // Removed experimentsA and experimentsB
}

model CellLine {
  id        String   @id @default(cuid())
  code      String   @unique
  tissue    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  predictions Prediction[]
  // Removed experiments
}

model Prediction {
  id              String     @id @default(cuid())
  userId          String
  name            String?
  drugAId         String
  drugBId         String
  cellLineId      String
  concentrationA  Float
  concentrationB  Float
  synergyScore    Float
  confidence      Float
  confidenceLevel Confidence
  createdAt       DateTime   @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  drugA    Drug     @relation("predDrugA", fields: [drugAId], references: [id], onDelete: Cascade)
  drugB    Drug     @relation("predDrugB", fields: [drugBId], references: [id], onDelete: Cascade)
  cellLine CellLine @relation(fields: [cellLineId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([cellLineId])
  @@index([drugAId, drugBId])
  @@index([name])
}

enum Confidence {
  LOW
  MEDIUM
  HIGH
}

model Report {
  id        String   @id @default(cuid())
  userId    String
  title     String
  fileUrl   String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model DrugCombination {
  id        String   @id @default(cuid())
  drugA     String
  drugB     String
  cellLine  String
  minConcA  Float
  maxConcA  Float
  minConcB  Float
  maxConcB  Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([drugA, drugB, cellLine])
  @@index([drugA, drugB])
  @@index([cellLine])
}

enum MetricType {
  VIABILITY
  SYNERGY
}

model Experiment {
  id               String     @id @default(cuid())
  userId           String
  user             User       @relation(fields: [userId], references: [id])
  drugA            String
  drugB            String
  concA            Float
  concB            Float
  cellLine         String
  metricType       MetricType
  metricValue      Float
  notes            String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  @@index([userId, createdAt])
}
