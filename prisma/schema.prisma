generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  clerkUserId    String          @unique
  email          String          @unique
  name           String?
  imageUrl       String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  allPredictions AllPrediction[]
  experiments    Experiment[]
  predictions    Prediction[]
  reports        Report[]
}

model Drug {
  id              String          @id @default(cuid())
  name            String          @unique
  target          String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  allPredictionsA AllPrediction[] @relation("allPredDrugA")
  allPredictionsB AllPrediction[] @relation("allPredDrugB")
  predictionsA    Prediction[]    @relation("predDrugA")
  predictionsB    Prediction[]    @relation("predDrugB")
}

model CellLine {
  id             String          @id @default(cuid())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  allPredictions AllPrediction[]
  predictions    Prediction[]
}

model Prediction {
  id              String     @id @default(cuid())
  userId          String
  name            String?
  drugAId         String
  drugBId         String
  cellLineId      String
  concentrationA  Float
  concentrationB  Float
  synergyScore    Float
  confidence      Float
  confidenceLevel Confidence
  createdAt       DateTime   @default(now())
  cellLine        CellLine   @relation(fields: [cellLineId], references: [id], onDelete: Cascade)
  drugA           Drug       @relation("predDrugA", fields: [drugAId], references: [id], onDelete: Cascade)
  drugB           Drug       @relation("predDrugB", fields: [drugBId], references: [id], onDelete: Cascade)
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([cellLineId])
  @@index([drugAId, drugBId])
  @@index([name])
}

model Report {
  id        String   @id @default(cuid())
  userId    String
  title     String
  fileUrl   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model DrugCombination {
  id        String   @id @default(cuid())
  drugA     String
  drugB     String
  cellLine  String
  minConcA  Float
  maxConcA  Float
  minConcB  Float
  maxConcB  Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([drugA, drugB, cellLine])
  @@index([drugA, drugB])
  @@index([cellLine])
}

model Experiment {
  id          String     @id @default(cuid())
  userId      String
  drugA       String
  drugB       String
  concA       Float
  concB       Float
  cellLine    String
  metricType  MetricType
  metricValue Float
  notes       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model AllPrediction {
  id              String     @id @default(cuid())
  userId          String
  drugAId         String
  drugBId         String
  cellLineId      String
  concentrationA  Float
  concentrationB  Float
  synergyScore    Float
  confidence      Float
  confidenceLevel Confidence
  createdAt       DateTime   @default(now())
  cellLine        CellLine   @relation(fields: [cellLineId], references: [id], onDelete: Cascade)
  drugA           Drug       @relation("allPredDrugA", fields: [drugAId], references: [id], onDelete: Cascade)
  drugB           Drug       @relation("allPredDrugB", fields: [drugBId], references: [id], onDelete: Cascade)
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([cellLineId])
  @@index([drugAId, drugBId])
}

enum Confidence {
  LOW
  MEDIUM
  HIGH
}

enum MetricType {
  VIABILITY
  SYNERGY
}
